{{ header }}

	<div class="b-breadcreambs">
		<div class="container">
			<div class="row">
				<div class="col-xl">
					<ul>
          {% for breadcrumb in breadcrumbs %}
						<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>


	<div class="b-content">
		<div class="container">
			<div class="row">
				<div class="col-xl">
					<div class="b-title">
						<span>{{ heading_title }}</span>
					</div>
				</div>
			</div>
			<div class="b-wrapper">
				<div class="row">
					<div class="col-xl-3 col-lg-3 col-md-4 x-hidden">
            {{ column_left }}
					
					</div>
					<div class="col-xl-9 col-lg-9 col-md-8 col-sm-12">
						<div class="b-items">
							<div class="row">
              {% if categories %}
                {% for category in categories %}
									<div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
										<div class="b-item">
											<a class="b-item-link" href="{{category.href}}"></a>
											<div class="b-item__img">
												<img src="{{ category.image }}" alt="">
											</div>
											<div class="b-item__text">
												<span>{{ category.name }}</span>
											</div>
										</div>
									</div>
                {% endfor %}
              {% else %}
								{% if articles %}
									{% for article in articles %}
										<div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
											<div class="b-item">
												<a class="b-item-link" href="{{article.href}}"></a>
												<div class="b-item__img">
													<img src="{{ article.thumb }}" alt="">
												</div>
												<div class="b-item__text">
													<span>{{ article.name }}</span>
												</div>
											</div>
										</div>
									{% endfor %}
								{% else %}
								<p>{{ text_empty }}</p>
								<div class="buttons">
									<div class="pull-right"><a href="{{ continue }}" class="b-cart-btn">{{ button_continue }}</a></div>
								</div>
								{% endif %}
              {% endif %}
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
	</div>

{{ footer }}

{% if products %}
  <div class="b-order-item__content" style="display:block">
  {% for product in products %}
    <div class="b-cart-item" data-reorder-id="{{ product.product_id }}">
      <div class="b-cart-item__img">
        <img src="{{ product.image }}" alt="{{ product.name }}">
      </div>
      <div class="b-cart-item__content">
        <span>{{ product.name }}</span>
      </div>
                      <div class="b-quantity">
                          <button class="b-quantity-btn minus">-</button>
                          <input type="text" value="{{ product.quantity }}">
                          <button class="b-quantity-btn plus">+</button>
                      </div>
                      <div class="b-cart-price">
                        <span>{{ product.total }}</span>
                      </div>
                      <button class="b-cart-del"></button>
    </div>
  {% endfor %}
  </div>
{% else %}
<p>{{ text_no_results }}</p>
<script>
(function ($) {
  var removeElement = function () {
    $('.b-cart-del').on('click', function () {

      $(this).closest('.b-cart-item').remove();
    });
  }
  
  $(document).ready(function () {
    removeElement();
  });
})(jQuery)
</script>

{% endif %}
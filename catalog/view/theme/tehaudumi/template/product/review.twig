{% if reviews %}
{% for review in reviews %}
<div class="b-card-reviews__item">
  <div class="b-card-reviews__item__top">
    <b>{{ review.author }}</b>
    <span>Оценка 
    {% for i in 1..5 %}
    {% if review.rating > i %}
      {% if loop.first %}
        {{ review.rating }}/5
      {%endif%}
    {% endif %}
    {% endfor %}
    </span>
  </div>
  <p>{{ review.text }}</p>
</div>
{% endfor %}
<div class="text-right">{{ pagination }}</div>
{% else %}
<p>{{ text_no_reviews }}</p>
{% endif %} 
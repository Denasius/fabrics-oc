{{ header }}
	<div class="b-breadcreambs">
		<div class="container">
			<div class="row">
				<div class="col-xl">
					<ul>
          {% for breadcrumb in breadcrumbs %}
						<li><a href="{{ breadcrumb.href }}">{{ breadcrumb.text }}</a></li>
          {% endfor %}
					</ul>
				</div>
			</div>
		</div>
	</div>
  {{ content_top }}

	<div class="b-content">
		<div class="container">
			<div class="row">
				<div class="col-xl">
					<div class="b-title">
						<span>{{ heading_title }}</span>
					</div>					
				</div>
			</div>
      
			<div class="b-wrapper">
				<div class="row">
					<div class="col-xl-3 col-lg-3 col-md-4 x-hidden">
						<div class="b-aside">
						{% if categories %}
							<ul>
								  {% for category in categories %}
										{% if category.category_id == active_class %}
											<li class="active"><a href="{{ category.href }}">{{ category.name }}</a></li>
										{% else %}
											<li><a href="{{ category.href }}">{{ category.name }}</a></li>
										{% endif %}
								  {% endfor %}
							</ul>
            			{% endif %}
						</div>
					</div>
						{% if products %}
						<div class="col-xl-9 col-lg-9 col-md-8 col-sm-12">
							<div class="b-items" data-content-id="b-items">
								<div class="row">
								{% for product in products %}
									<div class="col-xl-4 col-lg-4 col-md-6 col-sm-6">
										<div class="b-item">
											<a class="b-item-link" href="{{ product.href }}"></a>
											<button class="fav-btn" type="button" title="{{ button_wishlist }}" onclick="wishlist.add('{{ product.product_id }}');">
												<svg width="27" height="23" viewBox="0 0 27 23" fill="none" xmlns="http://www.w3.org/2000/svg">
												<path d="M23.5 11.5L13.5 21.5L3.50003 11.5L3.50003 11.5C3.00001 11 -0.499956 7.50001 3.50003 3.50002C7.50003 -0.499978 13.5 2.50004 13.5 5.00004C13.5 2.5 19.5 -0.499978 23.5 3.50002C26.7 6.70002 24.8334 10.1667 23.5 11.5Z" stroke="" stroke-width="2" stroke-linejoin="round"/>
												</svg>
											</button>
											<div class="b-item__img">
												<img src="{{ product.thumb }}" alt="{{ product.name }}">
											</div>
											<div class="b-item__text">
												<span>{{ product.name }}</span>
											</div>
											{% if product.price %}
											<div class="b-item__bottom">
												<div class="b-item__price">
												{% if not product.special %}
													<span>{{text_price}} {{ product.price }} *</span>
												{% else %}
												<span class="price-new">{{text_price}} {{ product.special }}</span> <span class="price-old">{{text_price}} {{ product.price }}</span>
												{% endif %}
												</div>
												<button class="add-cart" type="button" id="button-cart" onclick="cart.add('{{ product.product_id }}');"></button>
											</div>
											{% endif %}
										</div>
									</div>
								{% endfor %}
								</div>
							</div>
						</div>
						{% endif %}
						{% if not products %}
							<p>{{ text_empty }}</p>
							<div class="buttons">
								<div class="pull-right"><a href="{{ continue }}" class="b-cart-btn">{{ button_continue }}</a></div>
							</div>
						{% endif %}
				</div>
			</div>
		</div>
	</div>
{{ footer }} 
